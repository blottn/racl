{
	"manifest_version": 2,

	"name": "Racl",
	"description": "This is a really awesome crypto library!",
	"version": "1.0",
	"browser_action": {
		"default_title":"Racl",
		"default_popup":"popup.html"
	},
	"content_scripts": [
    {
      "matches": ["https://www.reddit.com/r/tcdcrypto/*/"],
	  
      "js": ["cryptico.min.js","racl.js"]
    }
  	],
	"background": {
		"scripts":["openpgp/openpgp.min.js","background.js"]
	},
	"permissions": [
		"http://*/",
		"unlimitedStorage",
		"identity",
		"identity.email",
		"activeTab",
		"storage"
	],
	"commands": {
		"encrypt": {
			"description":"encrypt fields",
			"suggested_key": {
				"default":"Alt+Shift+E"
			}
		},
		"decrypt": {
			"description":"decrypt encrypted fields",
			"suggested_key": {
				"default":"Alt+Shift+D"
			}
		}
	}
}
